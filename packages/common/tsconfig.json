{
  "compilerOptions": {
    "moduleResolution": "node",
    "allowJs": true,
    "alwaysStrict": true,
    // "declaration": true,
    // "declarationMap": true,
    // "emitDeclarationOnly": true,
    "incremental": false,
    "module": "es2015",
    "target": "es2015",
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    //dependencies lib version
    "lib": [
      "es2015",
      "dom"
    ],
    //custom types
    "paths": {},
    "outDir": "./dist/",
    "rootDir": "./src",
    "baseUrl": "./",
  },
  "include": [
    "src/**/*.ts",
    "src/types/*.d.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
